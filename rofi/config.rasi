configuration {
    terminal: "alacritty";

    modi: "combi";
    combi-modi: "drun,window";

    display-ssh:    "";
    display-run:    "";
    display-drun:   "";
    display-window: "";
    display-combi:  " ";

    drun-match-fields: "name,exec";
    drun-display-format: "{name}";
    show-icons:     false;

    auto-select: false;
    cycle: true;
    matching: "normal";
    scroll-method: 1;
}

@theme "theme.rasi"
