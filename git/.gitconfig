[user]
    name = bow
    email = bow@bow.web.id
    signingkey = 7A10C00C
[core]
    autocrlf = input
    safecrlf = warn
    editor = vim
    excludesfile = ~/.gitignore_global
[push]
    default = simple
[diff]
    renames = copies
    mnemonicprefix = true
[color]
    ui = auto
[alias]
    # list all alias
    lsalias = "!git config -l | grep alias | cut -c 7-"

    # basic shortcuts
    co = checkout
    ci = commit
    cp = cherry-pick
    st = status
    br = branch
    mg = merge
    sh = stash

    # various commit displays
    hist  = log --pretty=format:'%C(yellow)%h %Cblue%ad %Creset• %s%C(red)%d%Creset %C(cyan)[%an]%Creset' --graph --date=short
    histh = log --pretty=format:'%C(yellow)%h %Cblue%cr %Creset• %s%C(red)%d%Creset %C(cyan)[%an]%Creset' --graph --abbrev-commit --
    histf = log --pretty=format:'%C(yellow)%h %Cblue%cr %Creset• %s%C(red)%d%Creset %C(cyan)[%cn]' --decorate --numstat
    makepatch = log -u
    recent = log --graph -10 --branches --remotes --tags  --format=format:'%C(yellow)%h %Creset• %<(50,trunc)%s (%cN, %cr) %Cred%d' --date-order

    # handy aliases
    ec = config --global -e
    punch = push -f
    amend = commit --amend
    unstage = reset -q HEAD --
    discard = checkout --
    uncommit = reset --mixed HEAD~
    syncr = fetch --all --prune
    brstats = for-each-ref --sort=-committerdate refs/heads/ --format='%(color:yellow)%(objectname:short)%(color:reset) %(color:blue)%(committerdate:short)%(color:reset) • %(color:red)(%(refname:short))%(color:reset) %(contents:subject) %(color:cyan)[%(authorname)]%(color:reset)'
    up = !git pull --rebase --prune $@ && git submodule update --init --recursive

    # assume / unassume changed
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    # show assumed files
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    # unassume / assume all
    unassumeall = "!git assumed | xargs git update-index --no-assume-unchanged"
    assumeall = "!git st -s | awk {'print $2'} | xargs git assume"
